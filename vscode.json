{
  // General settings
  "editor.autoIndent": "full",
  "editor.fontWeight": "500",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 6,
  "editor.smoothScrolling": true,
  "editor.foldingStrategy": "indentation",
  "editor.cursorBlinking": "smooth",
  "editor.comments.insertSpace": true,
  "editor.dragAndDrop": true,
  "editor.fontSize": 24,
  "editor.fontFamily": "Hack Nerd Font Mono, Hack, Menlo, Monaco, 'Courier New', monospace",
  "editor.letterSpacing": 0.6,
  "editor.selectionHighlight": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.scrollBeyondLastLine": true,
  "editor.minimap.enabled": false,
  "editor.lineHeight": 0,
  "editor.minimap.maxColumn": 80,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "all",
  "editor.showFoldingControls": "always",
  "editor.snippetSuggestions": "top",
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.tabCompletion": "on",
  "editor.unfoldOnClickAfterEndOfLine": true,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
  "editor.fontLigatures": false,
  "editor.renderWhitespace": "trailing",
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,
  "editor.inlineSuggest.enabled": true,

  // Formatting settings
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Files and search settings
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "jspm_packages": true,
    "node_modules": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onWindowChange",

  // JavaScript and TypeScript settings
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.quoteStyle": "single",
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },

  // Prettier settings
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.printWidth": 100,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "all",
  "prettier.jsxSingleQuote": true,
  "prettier.bracketSpacing": true,

  // Workspace settings
  "workbench.startupEditor": "none",
  "workbench.editor.restoreViewState": true,
  "workbench.sideBar.location": "right",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.statusBar.visible": true,
  "workbench.commandPalette.preserveInput": true,
  "workbench.editor.closeOnFileDelete": false,
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.list.horizontalScrolling": true,
  "workbench.list.defaultFindMode": "filter",
  "workbench.fontAliasing": "antialiased",
  "breadcrumbs.enabled": false,

  // GitLens settings
  "gitlens.blame.avatars": false,
  "gitlens.blame.ignoreWhitespace": true,
  "gitlens.codeLens.authors.enabled": true,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.scopes": ["document", "containers", "blocks"],
  "gitlens.hovers.annotations.changes": false,
  "gitlens.hovers.annotations.enabled": false,
  "gitlens.keymap": "alternate",
  "gitlens.views.repositories.files.layout": "list",

  // Others
  "search.collapseResults": "auto",
  "search.quickOpen.includeSymbols": false,
  "search.showLineNumbers": true,
  "search.smartCase": true,

  "json.schemas": [],

  "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
  "terminal.integrated.gpuAcceleration": "off",

  // File associations
  "files.associations": {
    ".env*": "makefile",
    "*.jsx": "javascriptreact",
    "*.js": "javascriptreact"
  },

  // GitHub Copilot settings
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false
  },
  "github.copilot.advanced": {
    "debug.showScores": true
  },

  // ESLint settings
  "eslint.alwaysShowStatus": true,
  "eslint.lintTask.enable": true,

  // Settings Sync
  "settingsSync.ignoredSettings": [

  ],
  "settingsSync.ignoredExtensions": [],
  "workbench.colorTheme": "Tokyo Night"
}
